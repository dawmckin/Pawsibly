<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedVerificationRequest">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/verify_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="Name:" />

        <TextView
            android:id="@+id/verify_email_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Email:" />

        <TextView
            android:id="@+id/verify_location_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Location:" />

        <TextView
            android:id="@+id/verify_website_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Website:" />

        <TextView
            android:id="@+id/verify_phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Phone:" />

        <TextView
            android:id="@+id/verify_bio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Bio:" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/verify_account_btn"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="80dp"
        android:text="VERIFY ACCOUNT"
        android:background="@color/colorPrimaryDark"
        android:onClick="VerifySBAccount"/>

    <Button
        android:id="@+id/close_request_btn"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="480dp"
        android:background="@color/colorAccent"
        android:onClick="SBCancel"
        android:text="CLOSE REQUEST" />

</RelativeLayout>