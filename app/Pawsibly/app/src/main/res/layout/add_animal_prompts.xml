<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_animal_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/addName_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Name:"
        android:textColor="@color/realWhite"/>
    <EditText
        android:id="@+id/addName_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/realWhite"/>
    <TextView
        android:id="@+id/addDob_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DoB:"
        android:textColor="@color/realWhite"/>
    <EditText
        android:id="@+id/addDob_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/realWhite"/>
    <TextView
        android:id="@+id/addGender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender:"
        android:textColor="@color/realWhite"/>
    <RadioGroup
        android:id="@+id/radio_addGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_addMale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:theme="@style/MyRadioButton"/>
        <RadioButton
            android:id="@+id/radio_addFemale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:theme="@style/MyRadioButton"/>
    </RadioGroup>
    <TextView
        android:id="@+id/addType_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type:"
        android:textColor="@color/realWhite"/>
    <RadioGroup
        android:id="@+id/radio_addType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_addDog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dog"
            android:theme="@style/MyRadioButton"/>
        <RadioButton
            android:id="@+id/radio_addCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cat"
            android:theme="@style/MyRadioButton"/>
    </RadioGroup>
    <TextView
        android:id="@+id/addSize_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size:"
        android:textColor="@color/realWhite"/>
    <RadioGroup
        android:id="@+id/radio_addSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:theme="@style/MyRadioButton">

        <RadioButton
            android:id="@+id/radio_addSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small" />
        <RadioButton
            android:id="@+id/radio_addMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium" />
        <RadioButton
            android:id="@+id/radio_addLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large" />
    </RadioGroup>
    <TextView
        android:id="@+id/addBio_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bio:"
        android:textColor="@color/realWhite"/>
    <EditText
        android:id="@+id/addBio_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/addPicture_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Picture:"
        android:textColor="@color/realWhite"/>
    <EditText
        android:id="@+id/addPicture_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
