<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectedUserReport">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/report_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:text="Name:" />

        <TextView
            android:id="@+id/report_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Date Reported:" />

        <TextView
            android:id="@+id/report_reason_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Reason For Report:" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/delete_account_btn"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="80dp"
        android:text="TERMINATE ACCOUNT"
        android:background="@color/colorAccent"
        android:onClick="TerminateAccount"/>

    <Button
        android:id="@+id/close_report_btn"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="480dp"
        android:background="@color/colorPrimaryDark"
        android:onClick="onCancel"
        android:text="CLOSE REPORT" />


</RelativeLayout>